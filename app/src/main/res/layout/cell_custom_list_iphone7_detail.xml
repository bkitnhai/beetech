<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_toRightOf="@+id/ivUserIcon"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/modelLayout">

            <TextView
                android:text="Model"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:id="@+id/modelLabel"
                android:textStyle="bold" />

            <TextView
                android:text="iPhone4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/model" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sizeLayout">

            <TextView
                android:text="Size: "
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:id="@+id/sizeLabl"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/size"
                android:layout_alignBaseline="@+id/ivUserIcon"
                android:layout_toRightOf="@+id/ivUserIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"  />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/colorLayout">

            <TextView
                android:text="Color:"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:id="@+id/colorLabel"
                android:textStyle="bold" />

            <TextView
                android:text="black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/color"  />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/condiLayout">

            <TextView
                android:text="Condition:"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:id="@+id/condi"
                android:textStyle="bold" />

            <TextView
                android:text="Condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/condition"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desLayout">

            <TextView
                android:text="Desctiption: "
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textStyle="bold" />

            <TextView
                android:text="3 years warranty"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/description" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/priceLay">

            <TextView
                android:text="Price: "
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textStyle="bold" />

            <TextView
                android:text="100kr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLay">
            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/priceLay"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/ivUserIcon"
                android:background="#64d048"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Add To Cart"
                android:textColor="@android:color/background_light" />
                <!--android:textColor="@color/white" -->
                />
        </LinearLayout>

    </LinearLayout>

    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/ivUserIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/mobile" />
</RelativeLayout>
